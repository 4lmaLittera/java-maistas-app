<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="wolt">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
    <!-- Entity classes -->
    <class>com.naujokaitis.maistas.model.User</class>
    <class>com.naujokaitis.maistas.model.Client</class>
    <class>com.naujokaitis.maistas.model.RestaurantOwner</class>
    <class>com.naujokaitis.maistas.model.Driver</class>
    <class>com.naujokaitis.maistas.model.Administrator</class>
    <class>com.naujokaitis.maistas.model.Restaurant</class>
    <class>com.naujokaitis.maistas.model.Menu</class>
    <class>com.naujokaitis.maistas.model.MenuItem</class>
    <class>com.naujokaitis.maistas.model.PricingRule</class>
    <class>com.naujokaitis.maistas.model.Order</class>
    <class>com.naujokaitis.maistas.model.OrderItem</class>
    <class>com.naujokaitis.maistas.model.Review</class>
    <class>com.naujokaitis.maistas.model.ChatThread</class>
    <class>com.naujokaitis.maistas.model.ChatMessage</class>
    
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:mysql://localhost:3306/maistas_db?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;characterEncoding=UTF-8"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="rootpassword"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
